<div class="text-center">
  <h1 class="title">
    <%= t "confirmation.title" %>
  </h1>
</div>

<div class="panel panel-default box-xs-100">
  <div class="panel-body panel-body-custom">
    <div>
      <h4><%= t "common.confirmation_instruction1" %></h4>
      <h4><%= t "common.confirmation_instruction2" %></h4>
      <h4 class="text-danger"><%= t "common.confirmation_instruction2_2" %></h4>
      <h4><%= t "common.confirmation_instruction3" %></h4>
      <%= form_for(resource, as: resource_name, url: confirmation_path(resource_name),
        html: {method: :post}) do |f| %>

          <div class="margin-bottom-10px">
            <div class="form-group">
              <%= f.email_field :email, class: "form-control", placeholder: true,
                autofocus: true, required: true, class: "form-control input-sm",
                value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email) %>
            </div>
          </div>

          <div class="form-group">
            <%= recaptcha_tags hl: "vi" %>
          </div>

          <div class="box-xs-100 margin-bottom-15px">
            <%= f.submit t("confirmation.resend_confirmation"), class: "btn btn-success btn-block" %>
          </div>

      <% end %>
      <%= render "links" %>
    </div>
  </div>
</div>
