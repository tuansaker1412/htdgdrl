<div class="text-center">
  <h1 class="title">
    <%= t "password.reset_password" %>
  </h1>
</div>

<div class="panel panel-default box-xs-100">
  <div class="panel-body panel-body-custom">
    <div>
      <h4>
        <%= t "common.reset_password_instruction" %>
      </h4>

      <%= form_for(resource, as: resource_name, url: password_path(resource_name),
        html: {method: :post}) do |f| %>

        <div class="form-group margin-bottom-15px">
          <%= f.label :email %>:
          <%= f.email_field :email, class: "form-control",
            placeholder: true, autofocus: true, required: true %>
        </div>

        <div class="form-group">
          <%= recaptcha_tags hl: "vi" %>
        </div>

        <div class="margin-bottom-5px">
          <%= f.submit t("password.send_reset_password"), class: "btn btn-success btn-block" %>
        </div>
      <% end %>
      <%= render "main_links" %>
      </div>
    </div>
  </div>
</div>
