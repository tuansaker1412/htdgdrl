<div class="text-center">
  <h1 class="title">
    <%= t "registration.title" %>
  </h1>
</div>

<div class="panel panel-default box-xs-100">
  <div class="panel-body panel-body-custom">
    <div>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <div class="box-container box-space-between">
          <div class="form-group box-xs-47">
            <%= f.label :last_name %>:
            <%= f.text_field :last_name, class: "form-control margin-bottom-5px", placeholder: true,
              autofocus: !f.object.errors.any?, required: true %>
          </div>

          <div class="form-group box-xs-47">
            <%= f.label :first_name %>:
            <%= f.text_field :first_name, class: "form-control margin-bottom-5px", placeholder: true,
              autofocus: !f.object.errors.any?, required: true %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :email %>:

          <%= f.email_field :email, class: "form-control margin-bottom-5px",
            placeholder: true, required: true %>
        </div>

        <div class="form-group">
          <%= f.label :password %>:

          <%= f.password_field :password, class: "form-control margin-bottom-5px",
            placeholder: true, required: true %>
        </div>

        <div class="form-group">
          <%= f.label :password_confirmation %>:

          <%= f.password_field :password_confirmation, class: "form-control margin-bottom-5px",
            placeholder: true, required: true %>
        </div>

        <div class="form-group">
          <%= f.submit class: "btn btn-success btn-block" %>
        </div>
      <% end %>

      <%= render "users/shared/providers" %>

    </div>
  </div>
</div>

<div class="panel panel-default box-xs-100">
  <div class="panel-body">
    <div class="text-center">
      <span> <%= t "common.has_an_account" %></span>
      <%= link_to t("link_devise.log_in"), new_session_path(resource_name) %>
    </div>
  </div>
</div>
